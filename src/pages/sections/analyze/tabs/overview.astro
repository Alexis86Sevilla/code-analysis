---
const containerClasses = 'relative w-85 sm:w-96 sm:h-40 bg-gradient-to-br from-white/95 to-white/85 backdrop-blur-sm p-8 rounded-3xl flex flex-col items-center justify-center shadow-xl hover:shadow-2xl hover:shadow-[#F14A00]/20 transition-all duration-500 hover:-translate-y-2 border border-white/30 min-h-48 group overflow-hidden';

const spanTitleClasses = 'text-sm font-bold text-[#2A004E] uppercase tracking-wider mb-2 opacity-80 group-hover:opacity-100 transition-opacity';

const spanResultClass = "text-3xl font-bold text-[#500073] group-hover:text-[#2A004E] transition-colors duration-300 text-center leading-tight";
const { class: className } = Astro.props;
---

<div class={className}>
    <h2 class="text-white text-center text-5xl mt-20 mb-16 font-extrabold">
        <span class="bg-gradient-to-r from-[#F14A00] to-[#C62300] bg-clip-text text-transparent">
            Métricas básicas
        </span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20 justify-items-center">
        <div id="name-container" class={containerClasses}>
            <svg class="w-8 h-8 text-[#F14A00] mb-2 group-hover:scale-110 transition-transform duration-300"
                 fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd"
                      d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z"
                      clip-rule="evenodd"></path>
            </svg>
            <span class={spanTitleClasses}>Repositorio</span>
            <span id="name" class={spanResultClass}></span>

        </div>

        <div id="description-container" class={containerClasses}>
            <svg class="w-8 h-8 text-[#F14A00] mb-2 group-hover:scale-110 transition-transform duration-300"
                 fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd"
                      d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z"
                      clip-rule="evenodd"></path>
            </svg>
            <span class={spanTitleClasses}>Descripción</span>
            <span id="description" class={spanResultClass}></span>

        </div>

        <div id="stargazers_count-container" class={containerClasses}>
            <svg class="w-8 h-8 text-[#F14A00] mb-2 group-hover:scale-110 group-hover:rotate-12 transition-all duration-300"
                 fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <span class={spanTitleClasses}>Estrellas</span>
            <span id="stargazers_count" class={spanResultClass}></span>

        </div>

        <div id="forks-container" class={containerClasses}>
            <svg class="w-8 h-8 text-[#F14A00] mb-2 group-hover:scale-110 transition-transform duration-300"
                 fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd"
                      d="M7.707 3.293a1 1 0 010 1.414L5.414 7H11a7 7 0 017 7v2a1 1 0 01-2 0v-2a5 5 0 00-5-5H5.414l2.293 2.293a1 1 0 11-1.414 1.414L2.586 7l3.707-3.707a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
            </svg>
            <span class={spanTitleClasses}>Forks</span>
            <span id="forks" class={spanResultClass}></span>

        </div>

        <div id="created_at-container" class={containerClasses}>
            <svg class="w-8 h-8 text-[#F14A00] mb-2 group-hover:scale-110 transition-transform duration-300"
                 fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd"
                      d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                      clip-rule="evenodd"></path>
            </svg>
            <span class={spanTitleClasses}>Fecha de Creación</span>
            <span id="created_at" class={spanResultClass}></span>
        </div>

        <div id="updated_at-container" class={containerClasses}>
            <svg class="w-8 h-8 text-[#F14A00] mb-2 group-hover:scale-110 transition-transform duration-300"
                 fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                      clip-rule="evenodd"></path>
            </svg>
            <span class={spanTitleClasses}>Última Actualización</span>
            <span id="updated_at" class={spanResultClass}></span>

        </div>
    </div>
</div>